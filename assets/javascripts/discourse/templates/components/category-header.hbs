<nav class="category-breadcrumbs">
  <ul>
  {{#each categories as |category|}}
    <li>{{category-link category}}</li>
  {{/each}}
    <li>{{category-link category}}</li>
  </ul>
</nav>

<h3 class="row">
  <a href={{category.url}}>
    {{#if category.uploaded_logo.url}}
      {{cdn-img src=category.uploaded_logo.url class="category-logo"}}
    {{/if}}

    {{#if category.read_restricted}}
      {{fa-icon 'lock'}}
    {{/if}}

    <span class="category-title">{{category.name}}</span>

    {{#if category.description}}
      <p class="category-description">{{category.description}}</p>
    {{/if}}
  </a>
</h3>

<style type="text/css">
  .category-header {
    margin-bottom: 30px;
  }
  .category-header .category-logo {
    margin-bottom: 0;
  }
  .category-header h3 .category-title {
    font-size: 1.6em;
    line-height: 200%;
    color: #212121;
  }
  .category-header h3 .category-description {
    color: #909090;
    font-weight: normal;
  }
  .category-breadcrumbs {
    margin-bottom: 20px;
    height: 45px;
  }
  .category-breadcrumbs:after {
    clear: both;
  }
  .category-breadcrumbs > ul {
    margin: 0;
  }
  .category-breadcrumbs > ul > li {
    float: left;
    height: 1.2em;
    margin-right: 18px;
    padding: 12px 24px;
    box-shadow: 0 2px 4px -1px rgba(0,0,0,0.25);
    list-style: none;
  }
  .category-breadcrumbs > ul > li > a.badge-wrapper.bullet {
    font-size: 1.3em;
    font-weight: normal;
    line-height: 100%;
  }
  .category-breadcrumbs .badge-wrapper.bullet .badge-category-bg, .category-breadcrumbs .badge-wrapper.bullet .badge-category-parent-bg {
    display: none;
  }
</style>
